@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group">
                <label asp-for="Input.Nom" class="control-label"></label>
                <input asp-for="Input.Nom" class="form-control" />
                <span asp-validation-for="Input.Nom" class="text-danger"></span>
            </div>


            <!-- Adresse Field for Patient only -->
            @if (!string.IsNullOrEmpty(Model.Input.Adresse))
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Adresse" class="form-control" placeholder="Adresse" />
                    <label class="form-label">Adresse</label>
                </div>
            }

            <!-- Email Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Email address" />

                <label class="form-label">Email</label>
            </div>

            <!-- Phone Number Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." value="@Model.Input.PhoneNumber" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
