@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    * {
        box-sizing: border-box;
        margin: 0;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Adds the floating effect */
        transition: transform 0.2s; /* Smooth transition on hover */
        height: 300px; /* Makes the cards longer in height */
        position: relative; /* To position the pricing inside the card */
        border-radius: 10px; /* Rounded corners */
        overflow: hidden; /* Ensures content doesn't overflow */
    }

    .card:hover {
        transform: translateY(-10px); /* Lifts the card slightly on hover */
    }

    .card__content {
        position: relative;
        background-color: #fff;
        padding: 2rem 1.5rem 2.5rem;
        border-radius: .5rem;
        box-shadow: 0 12px 24px hsla(210, 61%, 16%, 0.1);
        transition: .4s;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .card__content:hover {
        box-shadow: 0 16px 24px hsla(210, 61%, 16%, 0.4);
    }

    .card__pricing {
        position: absolute;
        width: 200px;
        height: 119px;
        top: 0;
        left: -75px;
        transform: rotateY(75deg);
        border-radius: 0 100px 100px 0 / 0 20px 20px 0;
        box-shadow: 0 16px 24px hsla(210, 61%, 16%, 0.15);
    }

    .card__pricing::after {
        content: '';
        position: absolute;
        width: 14px;
        height: 164px;
        top: -20px;
        left: 2px;
        border-radius: 50px 0 0 50px / 80px 0 0 80px;
    }

    /* Custom colors for each card */
    .card-planning .card__pricing {
        background-color: #FF6347; /* Tomato */
    }

    .card-medecin .card__pricing {
        background-color: #4682B4; /* SteelBlue */
    }

    .card-infermiere .card__pricing {
        background-color: #32CD32; /* LimeGreen */
    }

    .card-patient .card__pricing {
        background-color: #FFD700; /* Gold */
    }

 

    .card__button {
        padding: 1.25rem;
        border: none;
        font-size: .938rem;
        border-radius: .5rem;
        background: linear-gradient(157deg, hsl(210, 96%, 54%) -12%, hsl(210, 96%, 54%) 109%);
        color: #fff;
        cursor: pointer;
        transition: .4s;
        width: 95%;
        font-weight: bold;
        text-decoration: none;
        margin: 5px; /* Center the button */
    }


    .card__button:hover {
        box-shadow: 0 16px 24px hsla(210, 61%, 16%, 0.15);
    }

    /* Flex layout adjustments */
    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Adjust gap between cards */
        justify-content: space-between; /* Distribute cards evenly */
    }

    .col-md-3 {
        flex: 1 1 calc(25% - 20px); /* Ensures 4 cards per row with spacing */
        max-width: 25%; /* Maximum width for each column */
    }

    /* Responsive Design */
    
</style>

<div class="container mt-5">
    <div class="row">
        <!-- Planning Card -->
        <div class="col-md-3 mb-4">
            <div class="card text-center card-planning">
                <div class="card__content">
                    <div class="card__pricing"></div>
                    <h1>Manage Plannings</h1>
                </div>
                    <a href="@Url.Action("Index", "Plannings")" class="card__button">View</a>
            </div>
        </div>

        <!-- Medecin Card -->
        <div class="col-md-3 mb-4">
            <div class="card text-center card-medecin">
                <div class="card__content">
                    <div class="card__pricing"></div>
                    <h1>Manage Medecins</h1>
                </div>
                    <a href="@Url.Action("Index", "Medecins")" class="card__button">View</a>
            </div>
        </div>

        <!-- Infermiere Card -->
        <div class="col-md-3 mb-4">
            <div class="card text-center card-infermiere">
                <div class="card__content">
                    <div class="card__pricing"></div>
                    <h1>Manage Infirmieres</h1>
                </div>
                    <a href="@Url.Action("Index", "Infirmieres")" class="card__button">View</a>
            </div>
        </div>

        <!-- Patient Card -->
        <div class="col-md-3 mb-4">
            <div class="card text-center card-patient">
                <div class="card__content">
                    <div class="card__pricing"></div>
                    <h1>Manage Patients</h1>
                </div>
                    <a href="@Url.Action("Index", "Patients")" class="card__button">View</a>
            </div>
        </div>
    </div>
</div>
