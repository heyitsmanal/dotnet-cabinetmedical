@model cabinetMedical.Models.Consultation

@{
    ViewData["Title"] = "Create Consultation";
}

<h1 class="my-4">Create Consultation</h1>

<h4>Consultation</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Patient Dropdown -->
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <!-- Médecin Dropdown -->
            <div class="form-group">
                <label asp-for="MédecinId" class="control-label"></label>
                <select asp-for="MédecinId" class="form-control" asp-items="ViewBag.MédecinId"></select>
                <span asp-validation-for="MédecinId" class="text-danger"></span>
            </div>

            <!-- Date Input -->
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
