@model cabinetMedical.Models.Consultation

@{
    ViewData["Title"] = "Consultation Details";
}

<h1 class="my-4">Consultation Details</h1>

<div>
    <h4>Consultation</h4>
    <hr />
    <dl class="row">
        <!-- Consultation Date -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>

        <!-- Dossier Médical -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DossierMédical)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DossierMédical.Id)
        </dd>

        <!-- Médecin -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Médecin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Médecin.Nom)
        </dd>

        <!-- Patient -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.Nom)
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
