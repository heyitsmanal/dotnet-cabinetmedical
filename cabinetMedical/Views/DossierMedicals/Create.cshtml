@model cabinetMedical.Models.DossierMedical

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create Dossier Médical</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <h4>Create a new Dossier Médical</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Patient</label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MédecinId" class="control-label">Médecin</label>
                <select asp-for="MédecinId" class="form-control" asp-items="ViewBag.MédecinId"></select>
                <span asp-validation-for="MédecinId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
