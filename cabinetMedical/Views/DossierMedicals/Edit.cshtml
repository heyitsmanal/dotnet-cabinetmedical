@model cabinetMedical.Models.DossierMedical

@{
    ViewData["Title"] = "Edit";
}


    <h1 >Edit Dossier Médical</h1>
   
    <hr />

    <div class="row ">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="PatientId" class="control-label"></label>
                    <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MédecinId" class="control-label"></label>
                    <select asp-for="MédecinId" class="form-control" asp-items="ViewBag.MédecinId"></select>
                    <span asp-validation-for="MédecinId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateCréation" class="control-label"></label>
                    <input asp-for="DateCréation" class="form-control" readonly />
                    <span asp-validation-for="DateCréation" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class=" mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
