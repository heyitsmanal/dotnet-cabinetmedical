@model CabinetMedical.Models.Facture

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4">Facture Details</h1>

<div class="card">
    <div class="card-header">
        <h4>Facture</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <!-- Amount -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <!-- Facture Date -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Model.Date.ToString("dd/MM/yyyy")
            </dd>

            <!-- Patient -->
            <dt class="col-sm-2">
                Patient
            </dt>
            <dd class="col-sm-10">
                @ViewBag.PatientName
            </dd>

            <!-- Consultation -->
            <dt class="col-sm-2">
                Consultation Date
            </dt>
            <dd class="col-sm-10">
                @ViewBag.ConsultationDate?.ToString("dd/MM/yyyy")
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
