@model IEnumerable<CabinetMedical.Models.Facture>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4">Factures</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>Patient</th>
            <th>Consultation Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                <td>@ViewBag.PatientNames[item.PatientId]</td>
                <td>@ViewBag.ConsultationDates[item.ConsultationId]?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
