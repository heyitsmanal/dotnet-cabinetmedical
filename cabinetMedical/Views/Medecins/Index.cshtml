@model IEnumerable<cabinetMedical.Models.Medecin>

@{
    ViewData["Title"] = "Index";
    var isAdmin = User.IsInRole("admin");
}

<h1 class="mb-4">Doctors List</h1>

<div class="d-flex justify-content-between mb-3">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    @if (isAdmin)
    {
        <form method="get" asp-action="Index" class="d-flex">
            <input type="text" name="search" placeholder="Search..." class="form-control w-50" />
            <button type="submit" class="btn btn-secondary ml-2">Search</button>
        </form>
    }
</div>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nom)</th>
            <th>@Html.DisplayNameFor(model => model.Spécialité)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                <td>@Html.DisplayFor(modelItem => item.Spécialité)</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
