@model Notification

@{
    ViewData["Title"] = "Create Notification";
}

<div class="container mt-5">
    <h2>Reserver Consultations</h2>

    <form method="post">
        <div class="form-group">
            <label for="Message">Message</label>
            <textarea asp-for="Message" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="MedecinId">Médecin</label>
            <select asp-for="MedecinId" class="form-control" asp-items="@(ViewData["MédecinId"] as SelectList)">
                <option value="">-- Select Doctor --</option>
            </select>
            <span asp-validation-for="MedecinId" class="text-danger"></span>
        </div>



        <button type="submit" class="btn btn-primary mt-3">Create Notification</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
