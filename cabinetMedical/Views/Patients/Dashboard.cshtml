@{
    ViewData["Title"] = "Patient Dashboard";
}

<style>
    * {
        box-sizing: border-box;
        margin: 0;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Adds the floating effect */
        transition: transform 0.2s; /* Smooth transition on hover */
        height: 300px; /* Makes the cards longer in height */
        position: relative; /* To position the pricing inside the card */
        border-radius: 10px; /* Rounded corners */
        overflow: hidden; /* Ensures content doesn't overflow */
    }

        .card:hover {
            transform: translateY(-10px); /* Lifts the card slightly on hover */
        }

    .card__content {
        position: relative;
        background-color: #fff;
        padding: 2rem 1.5rem 2.5rem;
        border-radius: .5rem;
        box-shadow: 0 12px 24px hsla(210, 61%, 16%, 0.1);
        transition: .4s;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

        .card__content:hover {
            box-shadow: 0 16px 24px hsla(210, 61%, 16%, 0.4);
        }

    .card__pricing {
        position: absolute;
        width: 200px;
        height: 119px;
        top: 0;
        left: -75px;
        transform: rotateY(75deg);
        border-radius: 0 100px 100px 0 / 0 20px 20px 0;
        box-shadow: 0 16px 24px hsla(210, 61%, 16%, 0.15);
    }

        .card__pricing::after {
            content: '';
            position: absolute;
            width: 14px;
            height: 164px;
            top: -20px;
            left: 2px;
            border-radius: 50px 0 0 50px / 80px 0 0 80px;
        }

    /* Custom colors for each card */
    .card-dossier-medical .card__pricing {
        background-color: #FF6347; /* Tomato */
    }

    .card-consultations .card__pricing {
        background-color: #4682B4; /* SteelBlue */
    }

    .card-factures .card__pricing {
        background-color: #32CD32; /* LimeGreen */
    }

    .card-notifications .card__pricing {
        background-color: #FFD700; /* Gold */
    }

    .card__button {
        padding: 1.25rem;
        border: none;
        font-size: .938rem;
        border-radius: .5rem;
        background: linear-gradient(157deg, hsl(210, 96%, 54%) -12%, hsl(210, 96%, 54%) 109%);
        color: #fff;
        cursor: pointer;
        transition: .4s;
        width: 95%;
        font-weight: bold;
        text-decoration: none;
        margin: 5px; /* Center the button */
    }

        .card__button:hover {
            box-shadow: 0 16px 24px hsla(210, 61%, 16%, 0.15);
        }

    /* Flex layout adjustments */
    .row {
        display: flex;
        flex-wrap: nowrap; /* Prevent wrapping, keep cards in a row */
        gap: 20px; /* Adjust gap between cards */
        justify-content: space-between; /* Distribute cards evenly */
        overflow-x: auto; /* Allow horizontal scrolling if the cards overflow */
    }

    .col-md-6 {
        flex: 0 0 auto; /* Prevent flex-grow and flex-shrink, set width based on content */
        width: 22%; /* Adjust width to fit the cards next to each other */
    }
</style>

<div class="container mt-5">
    <div class="row">
        <!-- Dossier Medical Card -->
        <div class="col-md-6 mb-4">
            <div class="card text-center card-dossier-medical">
                <div class="card__content">
                    <div class="card__pricing"></div>
                    <h3>My Dossier Medical (@ViewBag.DossierMedicalCount)</h3>
                </div>
                    <a href="@Url.Action("PatientDossMed", "DossierMedicals")" class="card__button">View</a>
            </div>
        </div>

        <!-- Consultations Card -->
        <div class="col-md-6 mb-4">
            <div class="card text-center card-consultations">
                <div class="card__content">
                    <div class="card__pricing"></div>
                    <h3>My Consultations (@ViewBag.ConsultationsCount)</h3>
                </div>
                    <a href="@Url.Action("PatientCons", "Consultations")" class="card__button">View</a>
            </div>
        </div>

        <!-- Factures Card -->
        <div class="col-md-6 mb-4">
            <div class="card text-center card-factures">
                <div class="card__content">
                    <div class="card__pricing"></div>
                    <h3>My Factures (@ViewBag.FacturesCount)</h3>
                </div>
                    <a href="@Url.Action("PatientFactures", "Factures")" class="card__button">View</a>
            </div>
        </div>

        <!-- Notification Card -->
        <div class="col-md-6 mb-4">
            <div class="card text-center card-notifications">
                <div class="card__content">
                    <div class="card__pricing"></div>
                    <h3>Reserver une Consultation</h3>
                </div>
                    <a href="@Url.Action("PatientCreateNotification", "Notifications")" class="card__button">Reserver</a>
            </div>
        </div>
    </div>
</div>
