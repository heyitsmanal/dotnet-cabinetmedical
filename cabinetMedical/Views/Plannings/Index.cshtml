@model IEnumerable<cabinetMedical.Models.Planning>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Planning Index</h1>

<!-- Create New Button -->
@if (User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<!-- Planning Table -->
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>@Html.DisplayNameFor(model => model.DateDébut)</th>
            <th>@Html.DisplayNameFor(model => model.DateFin)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.DateDébut)</td>
                <td>@Html.DisplayFor(modelItem => item.DateFin)</td>
                <td class="text-center">
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>